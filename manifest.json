{
  "manifest_version": 3,
  "name": "셀러보드 - 상품 정보 수집",
  "version": "2.0.0",
  "description": "AI 기반 다중 플랫폼 상품 수집 및 자동화 통합 솔루션",
  "permissions": [
    "activeTab",
    "storage",
    "alarms",
    "scripting",
    "notifications",
    "identity"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "oauth2": {
    "client_id": "YOUR_CLIENT_ID.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/spreadsheets"
    ]
  },
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "lib/platform-detector.js",
        "parsers/base-parser.js",
        "parsers/chinese-platforms/aliexpress-parser.js",
        "parsers/chinese-platforms/1688-parser.js",
        "parsers/chinese-platforms/taobao-parser.js",
        "parsers/korean-platforms/naver-parser.js",
        "parsers/korean-platforms/coupang-parser.js",
        "parsers/korean-platforms/gmarket-parser.js",
        "parsers/korean-platforms/auction-parser.js",
        "parsers/korean-platforms/11st-parser.js",
        "parsers/parser-manager.js",
        "content/content-script.js",
        "content/drag-selector.js",
        "content/widget.js"
      ],
      "css": [
        "styles/overlay.css",
        "styles/widget-modes.css"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "styles/widget.css",
        "styles/widget-modes.css",
        "lib/platform-detector.js",
        "parsers/base-parser.js",
        "parsers/parser-manager.js",
        "parsers/korean-platforms/naver-parser.js",
        "parsers/korean-platforms/coupang-parser.js",
        "parsers/korean-platforms/gmarket-parser.js",
        "parsers/korean-platforms/auction-parser.js",
        "parsers/korean-platforms/11st-parser.js",
        "parsers/chinese-platforms/aliexpress-parser.js",
        "parsers/chinese-platforms/1688-parser.js",
        "parsers/chinese-platforms/taobao-parser.js",
        "ai/gemini-service.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}