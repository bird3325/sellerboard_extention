{
  "manifest_version": 3,
  "name": "셀러보드 - 상품 정보 수집",
  "version": "2.1.1",
  "description": "다중 플랫폼 상품 수집 (Supabase 연동)",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost:3000/*",
      "https://*.supabase.co/*"
    ]
  },
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "lib/platform-detector.js",
        "parsers/base-parser.js",
        "parsers/chinese-platforms/aliexpress-parser.js",
        "parsers/chinese-platforms/1688-parser.js",
        "parsers/chinese-platforms/taobao-parser.js",
        "parsers/korean-platforms/naver-parser.js",
        "parsers/korean-platforms/coupang-parser.js",
        "parsers/korean-platforms/gmarket-parser.js",
        "parsers/korean-platforms/auction-parser.js",
        "parsers/korean-platforms/11st-parser.js",
        "parsers/parser-manager.js",
        "content/content-script.js"
      ],
      "css": [
        "styles/overlay.css"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "http://localhost:3000/*",
        "https://sellerboard.vercel.app/*"
      ],
      "js": [
        "content/content-bridge.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "progress/*",
        "lib/platform-detector.js",
        "lib/supabase-client.js",
        "parsers/base-parser.js",
        "parsers/parser-manager.js",
        "parsers/korean-platforms/naver-parser.js",
        "parsers/korean-platforms/coupang-parser.js",
        "parsers/korean-platforms/gmarket-parser.js",
        "parsers/korean-platforms/auction-parser.js",
        "parsers/korean-platforms/11st-parser.js",
        "parsers/chinese-platforms/aliexpress-parser.js",
        "parsers/chinese-platforms/1688-parser.js",
        "parsers/chinese-platforms/taobao-parser.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}